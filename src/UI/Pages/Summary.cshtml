@page
@model UI.Pages.SummaryModel
@{
    ViewData["Title"] = "Summary";
}

<h2>Summary</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvestmentPercentage" class="control-label">Investment Percentage</label>
                <input asp-for="InvestmentPercentage" class="form-control" />
                <span asp-validation-for="InvestmentPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnnualSalary" class="control-label">Annual Salary</label>
                <input asp-for="AnnualSalary" class="form-control" />
                <span asp-validation-for="AnnualSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label>You should invest @Model.MoniesToInvest</label>
            </div>
        </form>
    </div>
</div>